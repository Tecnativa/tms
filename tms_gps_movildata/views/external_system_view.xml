<odoo>

    <record id="external_system_view_form" model="ir.ui.view">
        <field name="name">external.system.movildata.view.form</field>
        <field name="model">external.system</field>
        <field name="inherit_id" ref="base_external_system.external_system_view_form" />
        <field name="arch" type="xml">
            <xpath expr='//notebook' position="inside">
                <page
                    string="Movildata"
                    attrs="{'invisible': [('system_type', '!=', 'external.system.movildata')]}"
                >
                    <field name="movildata_adapter_ids">
                        <tree editable="top" create="false" delete="false">
                            <field name="last_time_log" />
                            <field name="min_log_time" />
                            <field name="min_log_position" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
