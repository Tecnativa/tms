<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<record id="invoice_form" model="ir.ui.view">
    <field name="name">account.invoice.form.tms.print.template</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form" />
    <field name="arch" type="xml">
        <xpath expr="//group[@name='payments_info_group']" position="after">
            <group
                    string="Print template"
                    name="tms_print_template"
                    attrs="{'invisible': [('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]}"
                >
                <field name="tms_print_template_id" />
            </group>
        </xpath>
    </field>
</record>

</odoo>
